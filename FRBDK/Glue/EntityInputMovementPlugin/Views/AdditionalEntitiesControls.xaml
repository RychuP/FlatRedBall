<UserControl x:Class="TopDownPlugin.Views.AdditionalEntitiesControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:localization="clr-namespace:Localization;assembly=Localization"
             mc:Ignorable="d" 
             d:DesignWidth="300">
    <GroupBox Header="{x:Static localization:Texts.InputMovementType}" Visibility="{Binding AllUiVisibility}">
        <StackPanel>
            <RadioButton IsChecked="{Binding IsNoneRadioChecked}" Content="None" />
            <RadioButton IsChecked="{Binding IsTopDownRadioChecked}" Content="Top-Down" />
            <RadioButton IsChecked="{Binding IsPlatformerRadioChecked}" Content="Platformer" />
            <!--eventually...
                    <RadioButton>Racing</RadioButton>-->
        </StackPanel> 
    </GroupBox>
</UserControl>
