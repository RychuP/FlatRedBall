<Window x:Class="GlueFormsCore.Controls.InitializationWindowWpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:localization="clr-namespace:Localization;assembly=Localization"
             mc:Ignorable="d" Title="{x:Static localization:Texts.FrbEditor}" 
        WindowStyle="None" 
        ResizeMode="NoResize"
             Height="240" Width="550" WindowStartupLocation="CenterScreen" Icon="/Content/Icons/Icon.png">
    <Border Padding="0,32">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
            <Image Source="/Content/Icons/Icon.png" VerticalAlignment="Top" Margin="16,0"/>
            <Rectangle Width="1" Fill="DarkGray" HorizontalAlignment="Left" Grid.Column="1" />
            <StackPanel Grid.Column="2" Margin="16,0">
                <TextBlock x:Name="TopLevelLabel" TextWrapping="Wrap" FontSize="22" Text="{x:Static localization:Texts.PleaseWait}" />
                <TextBlock Margin="0,8,0,0" x:Name="SubLabel" TextWrapping="Wrap"></TextBlock>
            </StackPanel>
        </Grid>
    </Border>

</Window>
