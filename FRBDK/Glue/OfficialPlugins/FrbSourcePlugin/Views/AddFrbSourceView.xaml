<UserControl x:Class="OfficialPlugins.FrbSourcePlugin.Views.AddFrbSourceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:localization="clr-namespace:Localization;assembly=Localization"
             xmlns:wpfdataui="clr-namespace:WpfDataUi;assembly=WpfDataUiCore"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Padding="5" Background="Yellow" Foreground="Black" FontSize="19" Visibility="{Binding AlreadyLinkedMessageVisibility}">This project is already linked to source</TextBlock>
            <wpfdataui:DataUiGrid x:Name="DataUiGrid"></wpfdataui:DataUiGrid>
        </StackPanel>
        <Button Grid.Row="1" x:Name="LinkToSourceButton" Click="LinkToSourceButton_Click" Content="Link to Source" />
        
    </Grid>
</UserControl>
